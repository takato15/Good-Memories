<% if @customer.errors.any? %>
  <%= @customer.errors.count %>errors prohibited this obj from being saved:
    <% @customer.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container mt-5">
    <div class="col mb-5 mypage-update">
      <h3>会員情報編集</h3>


<%= form_with model:@customer, url: customers_path, local:true do |f| %>
        <table class="update-info">

            <tr>
              <th>会員ID</th>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <th>氏名</th>
              <td>
                <%= f.text_field :last_name %>
                <%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td>
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= f.text_field :post_cord %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= f.text_field :phone_number %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.text_field :email %></td>
            </tr>

             <tr>
               <th></th>
               <td><%= f.submit '編集内容を保存',class: "btn btn-sm btn-dark mt-3" %></td>
             </tr>

             <!--<div class="text-right"><　%= link_to '退会する',unsubsclibe_path,class:"btn btn-danger" %></div>-->
          </table>
          <% end %>
          </div>
</div>