<div class="container">
  <div class="row signup-page">
  <div class="mt-5">
    <h2>新規会員登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customer/shared/error_messages", resource: resource %>

    <div class="field my-2">
      <%= f.label :名前, class: "mt-3 mr-5" %><br>
        (姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-3 ml-3 mr-2",placeholder: "田中" %>
        (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-3 ml-3", placeholder: "一郎" %>
    </div>

    <div class="field mb-2">
      <%= f.label :フリガナ, class: "mt-2 "%><br>
        (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-3 mr-2",placeholder: "タナカ" %>
        (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-3", placeholder: "イチロウ" %>
    </div>

    <div class="field mb-2">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-9", placeholder: "example@example.com" %>
    </div>

    <div class="field mb-2">
      <%= f.label :電話番号, class: "mr-4 mb-1" %><br>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "col-5",placeholder: "09012345678"  %>
    </div>

    <div class="field mb-2">
      <%= f.label :郵便番号（ハイフンなし）, class: "mr-4 mb-1" %><br>
      <%= f.text_field :post_cord, autofocus: true, autocomplete: "post_cord", class: "col-5", placeholder: "123456"  %>
    </div>

    <div class="field mb-2">
      <%= f.label :住所, class: "mr-4 mb-1" %><br>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-9",placeholder: "東京都渋谷区代々木神園町０−０"  %>
    </div>

    <div class="field mb-2">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
      <% end %><br>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field mb-2">
      <%= f.label :パスワード（確認用） %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions mt-4">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <div class="mt-5 mb-5">
    <h6>既に登録済みの方</h6>
    <%= link_to "こちら", new_customer_session_path %>
    からログインを行ってください。
  </div>
</div>

</div>
