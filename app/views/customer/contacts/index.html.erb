<div class="contact-img">
  <div class="container mb-5 contact">

    <div class="col md-5">

      <% if @contact.errors.any? %>
        <%= @contact.errors.count %>件のエラー。
        <% @contact.errors.full_messages.each do |message| %>
          <%= message %>。
        <% end %>
      <% end %>

      <br><br><h2 class="contact-title">お問い合わせフォーム</h2>

        <%= form_with model: @contact, url: contacts_path, local: true do |f| %>
          <%= f.label :タイトル, class: "mt-2" %>
            <%= f.text_field :title, class: "form-control form-title" %>
          <%= f.label :内容, class: "mt-4" %>
            <%= f.text_field :detail, class: "form-control form-detail" %>

          <%= f.hidden_field :customer_id, value: current_customer.id %>
          <%= f.submit "送信", class: "btn btn-sm btn-dark mt-4" %>
        <% end %>

    </div>

    <%= render "sns" %>

  </div>
</div>