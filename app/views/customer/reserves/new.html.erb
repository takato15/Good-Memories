<div class="container mt-5 mb-5">
    <h2>Reserves</h2>

    <div class="reserve-new">
      <div class="validates">
        <% if @reserve.errors.any? %>
          <%= @reserve.errors.count %> 件の入力ミスがあります。
          <% @reserve.errors.full_messages.each do |message| %><br>
            ・<%= message %>
          <% end %>
        <% end %>
      </div>

      <table class="reserve">
          <%= form_with model:@reserve, url: reserves_path, local:true do |f| %>
            <tr>
              <th>氏名</th>
              <td>
                <%= current_customer.last_name %>
                <%= current_customer.first_name %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td>
                <%= current_customer.last_name_kana %>
                <%= current_customer.first_name_kana %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= current_customer.post_cord %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= current_customer.address %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= current_customer.phone_number %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= current_customer.email %></td>
            </tr>
            <tr>
              <th>希望プラン</th>
              <td><%= f.select :pran_name, [["結婚式関係", 1], ["成人式関係", 2], ["マタニティ", 3], ["お子さま", 4], ["旅行", 5], ["カップル", 6], ["七五三", 7], ["友達", 8]], :prompt => "選択してください" %></td>
            </tr>

             <%= f.submit '予約依頼',class:"btn", style: "background-color: #cbb05e; color: black;" %>
             <% end %>
          </table>

    </div>

</div>