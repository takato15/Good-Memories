<% tags.each do |tag| %>
  <tr>
    <td><%= tag.name %></td>
    <td><%= link_to "編集する", edit_admin_tag_path(tag.id), class:"btn btn-sm btn-secondary" %></td>
    <td><%= link_to '削除する', admin_tag_path(tag.id), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger admin_home_#{tag.id}" %></td>
  </tr>
<% end %>