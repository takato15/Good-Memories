<div class="container mt-5 mb-5 customer-edit">

  <h2><%= @customer.last_name%>　<%= @customer.first_name %>　様の会員情報編集</h2>
  
  <div class="validates">
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %> 件の入力ミスがあります。
      <% @customer.errors.full_messages.each do |message| %><br>
        ・<%= message %>
      <% end %>
    <% end %>
  </div>

  <%= form_with model: @customer, url: "/admin/customers/#{@customer.id}", local:true do |f| %>

    <table class="mt-5 admin_customer_edit">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </td>
      </tr>
      <tr>
        <th>フリガナ</th>
          <td>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td>
            <%= f.text_field :post_cord %>
          </td>
        </tr>
        <tr>
          <th>住所</th>
          <td>
            <%= f.text_field :address, size: "43" %>
          </td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td>
            <%= f.text_field :phone_number %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= f.text_field :email, size: "43" %>
          </td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効", value: false %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "無効", value: true %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= f.submit '変更を保存',class: "btn btn-sm btn-dark" %>
          </td>
        </tr>
      </table>
  <% end %>
  
</div>
